@page "/Hero"
<!-- Carousel Start -->
<div id="heroCarousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="4000">
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img src="images/bg-5.jpg" class="d-block w-100" alt="Slide 1">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                <h1 class="display-4 fw-bold text-white">Pakistani Art and Craft</h1>
                <p class="lead text-white mb-4">Explore the rich cultural heritage of Pakistan through handcrafted masterpieces.</p>
                <a href="#about" class="btn btn-lg text-white fw-bold px-5 py-2 explore-btn">EXPLORE NOW</a>
            </div>
        </div>

        <!-- Slide 2 -->
        <div class="carousel-item">
            <img src="images/bg-2.jpg" class="d-block w-100" alt="Slide 2">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                <h1 class="display-4 fw-bold text-white">Handcrafted With Love</h1>
                <p class="lead text-white mb-4">From pottery to weaving — experience timeless artistry.</p>
                <a href="#products" class="btn btn-lg text-white fw-bold px-5 py-2">SHOP NOW</a>
            </div>
        </div>

        <!-- Slide 3 -->
        <div class="carousel-item">
            <img src="images/bg-11.jpg" class="d-block w-100" alt="Slide 3">
            <div class="carousel-caption d-flex flex-column justify-content-center align-items-center h-100">
                <h1 class="display-4 fw-bold text-white">Tradition Meets Beauty</h1>
                <p class="lead text-white mb-4">Discover the colors and culture of local artisans.</p>
                <a href="#gallery" class="btn btn-lg  text-white fw-bold px-5 py-2">DISCOVER</a>
            </div>
        </div>


    </div>

    <!-- Controls -->
    <!-- Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>
<style>
    .carousel,
    .carousel-item,
    .carousel-image {
        height: 100vh;
        width: 100%;
        margin: 0;
        padding: 0;
        background-size: cover;
        background-position: center;
        position: relative;
    }

    .carousel-caption {
        position: absolute;
        top: 50%;
        left: 5%;
        transform: translateY(-50%);
        text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.7);
        z-index: 10;
    }

        .carousel-caption h1 {
            font-size: 4rem;
            font-weight: 700;
            color: #fff;
        }

        .carousel-caption p {
            font-size: 1.25rem;
            color: #fff;
            margin-bottom: 20px;
        }

    .btn{
        background-color:orangered;
    }
        .carousel-caption .btn {
            font-size: 1rem;
            border-radius: 30px;
        }

    .carousel-item img {
        height: 100vh;
        object-fit: cover;
    }

    .explore-btn {
        transition: all 0.3s ease; /* Smooth transition for hover effects */
    }

        .explore-btn:hover {
            border: 1px solid orangered;
            box-shadow: 0 0 0 1px orangered; /* Alternative if border conflicts with existing styles */
        }
</style>
