@page "/signup"
@inject NavigationManager Navigation

<body>
    <div class="signup-container">
        <h2>Sign Up</h2>

        <div class="form-group">
            <label>Username</label>
            <input type="text" @bind="Username" placeholder="Enter username" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="email" @bind="Email" placeholder="Enter email" />
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" @bind="Password" placeholder="Enter password" />
        </div>

        <button class="register-button" @onclick="RegisterUser">Register</button>

        <p>Already have an account? <a href="#" @onclick="GoToSignIn"><strong>Sign in</strong></a></p>
    </div>
</body>
@code {
    private string Username { get; set; }
    private string Email { get; set; }
    private string Password { get; set; }

    private void RegisterUser()
    {
        // Logic for registration (e.g., API call)
        Console.WriteLine($"User Registered: {Username}, {Email}");
    }

    private void GoToSignIn()
    {
        Navigation.NavigateTo("/signin");
    }
}
